<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:background="#BBDEFB">

    <FrameLayout
        android:id="@+id/dateFrame"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:elevation="8dp"
        android:background="@drawable/border"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You reached your:"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            style="@style/myBlackHeaderStyle"/>

        <TextView
            android:id="@+id/goalType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short-term goal"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            style="@style/myGreenHeaderStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make sure you get your reward!"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            style="@style/myGreenHeaderStyle"/>

        <Button
            android:id="@+id/setNewGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set a new goal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:backgroundTint="#4c739d"
            android:textSize="18sp"/>
    </FrameLayout>

</RelativeLayout>